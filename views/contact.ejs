<%- include("./partials/header.ejs") %>
<div class="container-fluid bg-dark">
  <div class="row">
    <div class="col-sm-2">
      <%- include("./partials/sidebar.ejs", {page_name: 'Contact'}) %>
    </div>
    <div class="col-sm-10">
      <!-- Main Content -->
      <div class="container mt-5">
        <h1 class="i-color mb-5 border-bottom">CONTACT US</h1>
        <div class="row text-white mb-3">
          <p class="mx-auto mb-5">
            Do you have any questions? PLease do not hesitate to contact. I will
            come back to you within a matter of hours to help you.
          </p>
          <div class="col-sm-9 mb-5">
            <form action="">
              <div class="row g-3">
                <div class="col-md-6">
                  <label for="inputName">Your Name</label>
                  <input type="text" class="form-control mt-2" id="inputName" />
                </div>
                <div class="col-md-6">
                  <label for="inputEmail">Your Email</label>
                  <input
                    type="email"
                    class="form-control mt-2"
                    id="inputEmail"
                  />
                </div>

                <div class="col-md-12">
                  <label for="inputSubject">Your Subject</label>
                  <input
                    type="text"
                    class="form-control mt-2"
                    id="inputSubject"
                  />
                </div>

                <div class="col-md-12">
                  <label for="inputTextarea">Your Message</label>
                  <textarea
                    class="form-control mt-2"
                    id="inputTextarea"
                    required
                    rows="3"
                  ></textarea>
                </div>
              </div>
              <button class="btn btn-primary mt-4 fw-bold w-25" type="submit">
                Send
              </button>
            </form>
          </div>
          <div class="col-sm-3 text-center">
            <ul class="list-unstyled">
              <li>
                <i class="fa-solid fa-location-dot fa-2x i-color mb-2"></i>
                <p>Pathankot, Punjab, India.</p>
              </li>
              <li>
                <i class="fa-solid fa-phone-volume fa-2x i-color mt-4 mb-2"></i>
                <p>+91 900000009</p>
              </li>
              <li>
                <i class="fa-solid fa-envelope fa-2x i-color mt-4 mb-2"></i>
                <p>xyz@gmail.com</p>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="text-center mb-5 fs-2">
        <a href="#" target="_blank"
          ><i class="fa-brands fa-instagram i-color mx-3"></i
        ></a>
        <a href="#" target="_blank"
          ><i class="fa-brands fa-facebook i-color"></i
        ></a>
        <a href="#" target="_blank"
          ><i class="fa-brands fa-twitter i-color mx-3"></i
        ></a>
        <a href="#" target="_blank"
          ><i class="fa-brands fa-linkedin i-color"></i
        ></a>
      </div>
    </div>
  </div>
</div>
<%- include("./partials/footer.ejs") %>
